pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Adithya02-alt/react-swarm-app.git'
            }
        }

        stage('Install & Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t react-swarm-app .'
            }
        }

        stage('Deploy to Docker Swarm') {
            steps {
                sh 'docker stack deploy -c docker-compose.yml reactapp'
            }
        }
    }
}
