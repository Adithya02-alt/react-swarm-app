pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'swarm'
        IMAGE_NAME = 'adisree/reactswarm'
    }

    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/Adithya02-alt/react-swarm-app.git',
                    branch: 'main'
                )
            }
        }

        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        dockerImage.push('latest')
                    }
        stage('Deploy to Docker Swarm') {
            steps {
                sh 'docker stack deploy -c docker-compose.yml reactapp'
                  }
                }

            }
        }
    }
}
